extends layout

block vars

block content

    .container-fluid
        .row.page-margin
            
            nav.archive.top.col-md-12
                .row
                    .hidden-xs.col-sm-6.col-md-1.col-lg-1
                        .btn-group
                            button.btn.dtn-default.dropdown-toggle(type='button' data-toggle='dropdown' aria-expanded='false')= t('button.year') 
                                    span.caret
                            ul.dropdown-menu(role='menu')
                                li
                                    a(href='#') 2015
                                li
                                    a(href='#') 2014
                                li
                                    a(href='#') 2013
                                li
                                    a(href='#') 2012
                                li
                                    a(href='#') 2011
                                li
                                    a(href='#') 2010
                    .hidden-xs.col-sm-6.col-md-2.col-lg-2
                        .btn-group
                            button.btn.dtn-default.dropdown-toggle(type='button' data-toggle='dropdown' aria-expanded='false')= t('button.category')
                                    span.caret
                            ul.dropdown-menu(role='menu')
                                li
                                    a(href='#' data-value='option1' tabIndex="-1")
                                        input(type='checkbox')
                                        span= t('categories.theatre')
                                li
                                    a(href='#' data-value='option2' tabIndex="-1")
                                        input(type='checkbox')
                                        span= t('categories.dance')
                                li
                                    a(href='#' data-value='option3' tabIndex="-1")
                                        input(type='checkbox')
                                        span= t('categories.performance')
                                li
                                    a(href='#' data-value='option4' tabIndex="-1")
                                        input(type='checkbox')
                                        span= t('categories.music')
                                li
                                    a(href='#' data-value='option5' tabIndex="-1")
                                        input(type='checkbox')
                                        span= t('categories.lecture')
                                li
                                    a(href='#' data-value='option6' tabIndex="-1")
                                        input(type='checkbox')
                                        span= t('categories.film')
                                li
                                    a(href='#' data-value='option7' tabIndex="-1")
                                        input(type='checkbox')
                                        span= t('categories.new-circus')

                    .col-sm-12.col-md-9.col-lg-9
                        ul.pager
                            li.previous
                                a(href='#')
                                    span &larr; August 2015
                            li.next
                                a(href='#')
                                    span September 2015 &rarr;

            .col-md-12
                .tours.row
                    .col-xs-12.col-md-12.col-lg-12
                        h2 Aprill 2015

                    if program
                        each eventdate, datestring in program
                            each eventtime, timestring in eventdate
                                each p in eventtime
                                    .col-xs-12.col-sm-2.col-lg-2
                                        p= (moment(datestring).locale(lang).format('dddd'))
                                        p= (moment(datestring).locale(lang).format('L'))
                                        p= timestring
                                        
                                        //- Premiere
                                        if op.get(p, 'performance.premiere.start-time')
                                            if (moment(datestring).locale(lang).format('L') === moment(op.get(p, 'performance.premiere.start-time')).locale(lang).format('L'))
                                                p.today= t('button.premiere')

                                        //- Today
                                        if (moment(datestring).format('D')) == (moment().date())
                                            div.today= t('button.today')

                                    .col-xs-12.col-md-6.col-lg-6
                                        h3
                                            a(href='/' + lang + '/event/' + op.get(p,'id'))= op.get(p, lang + '-name')
                                    .col-xs-6.col-md-2.col-lg-2
                                        p= op.get(p, 'location')
                                        p= op.get(p, 'price')
                                    .col-xs-6.col-md-2.col-lg-2.text-right
                                        a.btn.btn-primary(href='#')= t('button.buy_ticket')
                                    .col-xs-12.col-md-12.col-lg-12
                                        hr
                    else
                        .col-lg-12
                            h2= t('title.no-events')

            nav.archive.bottom.col-md-12
                .row
                    .hidden-xs.col-sm-6.col-md-1.col-lg-1
                        .btn-group
                            button.btn.dtn-default.dropdown-toggle(type='button' data-toggle='dropdown' aria-expanded='false')= t('button.year') 
                                    span.caret
                            ul.dropdown-menu(role='menu')
                                li
                                    a(href='#') 2015
                                li
                                    a(href='#') 2014
                                li
                                    a(href='#') 2013
                                li
                                    a(href='#') 2012
                                li
                                    a(href='#') 2011
                                li
                                    a(href='#') 2010
                    .hidden-xs.col-sm-6.col-md-2.col-lg-2
                        .btn-group
                            button.btn.dtn-default.dropdown-toggle(type='button' data-toggle='dropdown' aria-expanded='false')= t('button.category')
                                    span.caret
                            ul.dropdown-menu(role='menu')
                                li
                                    a(href='#' data-value='option1' tabIndex="-1")
                                        input(type='checkbox')
                                        span= t('categories.theatre')
                                li
                                    a(href='#' data-value='option2' tabIndex="-1")
                                        input(type='checkbox')
                                        span= t('categories.dance')
                                li
                                    a(href='#' data-value='option3' tabIndex="-1")
                                        input(type='checkbox')
                                        span= t('categories.performance')
                                li
                                    a(href='#' data-value='option4' tabIndex="-1")
                                        input(type='checkbox')
                                        span= t('categories.music')
                                li
                                    a(href='#' data-value='option5' tabIndex="-1")
                                        input(type='checkbox')
                                        span= t('categories.lecture')
                                li
                                    a(href='#' data-value='option6' tabIndex="-1")
                                        input(type='checkbox')
                                        span= t('categories.film')
                                li
                                    a(href='#' data-value='option7' tabIndex="-1")
                                        input(type='checkbox')
                                        span= t('categories.new-circus')

                    .col-sm-12.col-md-9.col-lg-9
                        ul.pager
                            li.previous
                                a(href='#')
                                    span &larr; August 2015
                            li.next
                                a(href='#')
