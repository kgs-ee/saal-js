extends layout

block vars

block content

	.container-fluid
		.row.page-margin

			section.col-md-6
				.programme.row
					.col-xs-12.col-md-12
						h2= t('title.kanut-residency')

					if residencies
						each eventdate, datestring in residencies
							each eventtime, timestring in eventdate
								each p in eventtime
									.col-xs-12.col-md-2
										p= (moment(datestring).locale('et').format('L')) + "—"

									.col-xs-12.col-md-10
										h3
											a(href='/' + lang + '/resident/' + op.get(p,'id'))= op.get(p, lang + '-name')

									.col-xs-12.col-md-12
										hr
					else
						.col-lg-12
							h2= t('title.no-residencies')


			section.col-md-6
				.programme.row
					.col-xs-12.col-md-12
						h2= t('title.pyhavaimu-residency')
					.col-lg-12
						h2 Pühavaimu residentuurid tuleksid siia