extends layout

block vars

block content

    .container-fluid
        .row.page-margin

            section.col-md-12
                .programme.row
                    .col-xs-12.col-md-12
                        h2= t('nav.coproductions')
                    
                    .grid-row
                        each performance in performances
                            a.col-xs-12.col-sm-4.col-md-3.col-lg-3.co-production(href='/' + lang + '/performance/' + op.get(performance,'id'), ordinal=op.get(performance,'coprodOrdinal'))
                                img.img-responsive(src=op.get(performance, ['photos', 0, 'medium', 'file'], '/images/placeholder.jpg'))
                                p.artist= op.get(performance, ['artist'], '')
                                p= op.get(performance, [lang+'-name'], '')
