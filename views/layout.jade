    body

        nav.navbar-default.navbar-fixed-top
            .container-fluid
                .row
                    .col-lg-1
                        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls="navbar")
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.logo(href='/' + lang + '/')
                            img(src='/images/saal_logo.svg', alt=t('.KGS_logo'))
                            p.season.visible-lg= 'Hooaeg ' + (new Date().getFullYear())
                    .collapse.navbar-collapse(id='navbar')
                        ul.list-unstyled.col-lg-1
                            li
                                a(href='/' + lang + '/about') Saal
                            li
                                a(href='/' + lang + '/program')= t('nav.program')
                            li
                                a(href='/' + lang + '/residency')= t('nav.residency')
                        ul.list-unstyled.col-lg-2            
                            li
                                a(href='/' + lang + '/tours')= t('nav.tours')
                            li
                                a(href='/' + lang + '/projects')= t('nav.projects')
                            li
                                a(href='/' + lang + '/contact')= t('nav.contact')
                        ul.list-unstyled.col-lg-4 
                            li
                                a(href='/' + lang + '/festival/1234') NU Performance
                            li
                                a(href='/' + lang + '/festival/1235') SAAL Bienaal
                        ul.list-unstyled.col-xs-6.col-lg-2
                            li
                                a(href='/en') In English   
                        ul.social.list-inline.col-xs-6.col-lg-2.text-right
                            li
                                a.icon-facebook3(href='https://www.facebook.com/KanutiGildiSAAL', target='blank')
                            li
                                a.icon-twitter3(href='https://twitter.com/kanutigildisaal', target='blank')
                            li
                                a.icon-instagram(href='https://instagram.com/kanutigildisaal', target='blank')
                            li
                                a.icon-vimeo3(href='http://vimeo.com/kanutigildisaal', target='blank')
                            if user
                                li
                                    a(href='/' + lang + '/users/me') Me
                                li
                                    a(href='/' + lang + '/signin/exit') Sign Out
                            else
                                li
                                    a(href='/' + lang + '/signin') Sign In

        block content

.container-fluid        
    footer.row
        .col-md-4
            p Kanuti Gildi SAAL
            p Pikk 20, 10133
            p Tallinn, Estonia

        .col-md-3.col-md-offset-5.text-right
            form.form-inline
                .form-group
                    label.sr-only(for='seach') Otsi…
                    input.form-control(type='text' id='search' placeholder='Otsi…')
                button.btn.btn-default(type='submit') Otsi
        
style.
    /**
    ** SAAL COLOR SCHEME
    ** #00f - primary color
    ** #A62720 - secondary color
    */
    a:hover {
        color: #{SAAL.secondary_color};
    }

    .navbar-default .social a {
        color: #{SAAL.secondary_color};
    }

    .select-cat .active {
        color: #{SAAL.secondary_color};
    }

    .select-cat label:hover {
        color:#{SAAL.secondary_color};
    }

    .btn-primary {
        background-color: #{SAAL.secondary_color};
        border-color: #{SAAL.secondary_color};
    }

    .btn-primary:hover {
        color: #{SAAL.secondary_color};
        border-color: #{SAAL.secondary_color};
    }

    .btn-primary:focus {
        background-color: #{SAAL.secondary_color};
        border-color: #{SAAL.secondary_color};
    }

    .open>.btn-default.dropdown-toggle {
        background-color: #{SAAL.secondary_color};
        border-color: #{SAAL.secondary_color};
    }

    .btn-default {
        color: #{SAAL.secondary_color};
        border-color: #{SAAL.secondary_color};
    }

    .btn-default:hover {
        background-color: #{SAAL.secondary_color};
        border-color: #{SAAL.secondary_color};
    }

    .voulenteer a {
        background-color: #{SAAL.secondary_color};
    }

    .voulenteer a:hover {
        border: 2px solid #{SAAL.secondary_color};
        color: #{SAAL.secondary_color};
    }

    .panel h3 a:focus,
    .panel .select-cat label a:focus,
    .select-cat .panel label a:focus {
        color: #{SAAL.secondary_color};
    }

    footer {
        background-color: #{SAAL.secondary_color};
    }

script.
    var target1 = document.getElementById('slide-01');
    var target2 = document.getElementById('slide-02');
    var gradientMap = '#{SAAL.secondary_color}, #{SAAL.main_color}';

    GradientMaps.applyGradientMap(target1, gradientMap);
    GradientMaps.applyGradientMap(target2, gradientMap);