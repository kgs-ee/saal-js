    body

        nav.navbar-default.navbar-fixed-top
            .container-fluid
                .row
                    .col-lg-1
                        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls="navbar")
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.logo(href='/' + lang + '/')
                            img(src='/images/saal_logo.svg', alt=t('.KGS_logo'))
                            p.season.visible-lg= season
                    .collapse.navbar-collapse(id='navbar')
                        ul.list-unstyled.col-lg-1
                            li
                                a(href='/' + lang + '/about') Saal
