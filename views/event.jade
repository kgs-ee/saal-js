extends layout

block vars

block content

    .container-fluid

        .row
            .event-banner.carousel.slide(id='front-carousel' data-ride='carousel')
                .carousel-inner(role='listbox')
                    figure(id='slide-01' style='background-image: url(' + op.get(event, 'performance.photo.file') + ');')
                    header.col-md-8
                        p Siia peaks tulema miski alapealkiri, väli ka Entusse
                        h1= op.get(event, 'performance.name')

                    //- categoryNames = category).map(function(c){return c.value});    
                    ul.event-categories
                        li.text-uppercase.h3
                            span= t('categories.theatre')
                        li.text-uppercase.h3
                            span= t('categories.dance')
                        li.text-uppercase.h3
                            span= t('categories.performance')
                        li.text-uppercase.h3.unactive
                            span= t('categories.music')
                        li.text-uppercase.h3.unactive
                            span= t('categories.lecture')
                        li.text-uppercase.h3
                            span= t('categories.film')
                        li.text-uppercase.h3
                            span= t('categories.new-circus')          

        .row.page-margin
            aside.col-md-4.col-lg-3
                .row
                    .col-xs-6.col-md-6
                        p Laupäev
                        p 13.02.2015
                    .col-xs-6.col-md-6.text-right
                        a.btn.btn-primary Osta pilet
                    .col-xs-12.col-md-12.col-lg-12
                        hr

                .meta-info= op.get(event, 'performance.technical-information')

                    a.text-right(href='https://saal.entu.ee/entity/event/' + op.get(event, 'id')) Vaata intranetis

            article.main-text.col-md-8.col-lg-6.h3
                p!= op.get(event, 'performance.description')

            aside.video-sound.col-md-12.col-lg-3
                div
                    h2 Heli
                    <iframe width="100%" height="100" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/187215405&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false&amp;visual=true"></iframe>

                div
                    h2 Video
                    <iframe src="http://player.vimeo.com/video/115633134?title=0&amp;byline=0&amp;portrait=0" width="100%" height="300" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>

            .press.col-md-6
                h2 Pressikajastus
                
                .row
                    .col-md-12.h3
                        a(href='#') 28.02.2015 EPL: Kadri Noormetsa uus lavastus Kanuti Gildi SAAL'is

                    .col-xs-12.col-md-12
                        hr

            .gallery.col-md-6
                h2 Galerii

                .row
                    .single-image.col-xs-6.col-sm-3.col-md-4
                        a.fancybox(rel='gallery' href='images/testimage_landscape.jpg')
                            img(src='http://placehold.it/200x150' class='img-responsive' alt='Pildi allkiri')
