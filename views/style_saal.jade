- var fgcolor = SDC.get(['root', 'main_color'], 'FFFF00')
- var bgcolor = SDC.get(['root', 'secondary_color'], '1a1919')
style.
    /**
    ** SAAL COLOR SCHEME
    */
    
    #front-carousel,
    .event-banner .item {
        background-color: #{bgcolor};
    }

    .item a:hover header,
    .select-cat .active {
        color: #{bgcolor};
    }

    .select-cat label:hover {
        color:#{bgcolor};
    }

    li.event,
    .highlight.event {
        background-color: #{fgcolor};
    }
    
    li.tour,
    .highlight.tour {
        background-color: #{bgcolor};
    }
    
    .highlight.multiple {
        background-color: #{fgcolor} !important;
    }
    
    .navbar-nav > .active > a,
    .main-nav a:hover,
    .legend li.event:before {
        color: #{fgcolor} !important;
    }

    .legend li.tour:before {
        color: #{bgcolor};
    }

    .legend li.event,
    .legend li.tour {
        background-color: transparent;
    }

    .today {
        color: #{fgcolor};
    }

    .btn,
    .btn-primary {
        background-color: #{bgcolor};
        border-color: #{bgcolor};
    }

    .btn:hover,
    .btn-primary:hover {
        color: #{bgcolor};
        border-color: #{bgcolor};
    }

    .btn:focus,
    .btn-primary:focus {
        background-color: #{bgcolor};
        border-color: #{bgcolor};
    }

    .open>.btn-default.dropdown-toggle {
        background-color: #{bgcolor};
        border-color: #{bgcolor};
    }

    .btn-default {
        color: #{bgcolor};
        border-color: #{bgcolor};
    }

    .btn-default:hover {
        background-color: #{bgcolor};
        border-color: #{bgcolor};
    }
    
    .social .lang a {
        color: #{fgcolor} !important;
    }
    
    .social .lang a:hover {
        color: #{bgcolor} !important;
    }

    footer .social a {
        color: #fff !important;
    }

    footer .social a:hover {
        color: #{fgcolor} !important;
    }

    .volunteer {
        background-color: #{fgcolor};
        color: #{bgcolor};
    }

    .volunteer:hover {
        border: 2px solid #{fgcolor} ;
        color: #{fgcolor};
    }

    .panel h3 a:focus,
    .panel .select-cat label a:focus,
    .select-cat .panel label a:focus {
        color: #{bgcolor};
    }

    #mailchimp-sign-up input[type="text"] {
        border: 2px solid #{bgcolor};
        color: #{bgcolor};
    }

    #mailchimp-sign-up input[type="submit"] {
        color: #{bgcolor};
    }

    .matched {
        color: red;
    }

    .pager li > a,
    .pager li > span {
        background-color: #{bgcolor};
        border: 1px solid #{bgcolor};
        color: #fff;
    }

    .pager li > a:hover,
    .pager li > span:hover {
        background-color: #fff;
        border: 1px solid #{bgcolor};
        color: #{bgcolor};
    }
    

    footer {
        background-color: #{bgcolor};
    }

    .site-search input {
        border: 2px solid #{bgcolor};
        color: #{bgcolor};
    }

    .site-search button{
        color: #{bgcolor};
    }
    
    .highlight a:hover {
        color: #fff !important;
    }
    
    a:hover,
    a:focus,
    a:active,
    .select-cat a:hover,
    .select-cat a .active:hover {
        color: #{fgcolor} !important;
    }
    
    .popover-content a:hover {
    	color: #fff !important;
    }
